<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc https://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <mvc:annotation-driven/>
    <mvc:resources mapping="/images/**" location="/images/" />
    
    <context:property-placeholder location="classpath:application.properties" />
    
    <context:component-scan base-package="com.avitam.application"/>

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/"/>
        <property name="suffix" value=".jsp"/>
    </bean>
    
                        <!--    DAO LAYER    -->
    <bean id="userDao"
      class="com.avitam.application.daoimpl.UserDaoImpl">
      <property name="jdbcTemplate" ref="jdbcTemplate"/>
     </bean>

    <bean id="categoryDao"
      class="com.avitam.application.daoimpl.CategoryDaoImpl">
      <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>
      
      <bean id="productDao"
      class="com.avitam.application.daoimpl.ProductDaoImpl">
      <property name="jdbcTemplate" ref="jdbcTemplate"/>
     </bean>
     
     <bean id="subCategoryDao"
      class="com.avitam.application.daoimpl.SubCategoryDaoImpl">
      <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>
    
    <bean id="cartDao"
      class="com.avitam.application.daoimpl.CartDaoImpl">
      <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>
    
    <bean id="cartItemDao"
      class="com.avitam.application.daoimpl.CartItemDaoImpl">
      <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>
    
    <bean id="addressDao"
      class="com.avitam.application.daoimpl.AddressDaoImpl">
      <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>
    
    
    
    <bean id="orderDao"
      class="com.avitam.application.daoimpl.OrderDaoImpl">
      <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>
    
    <bean id="orderItemDao"
      class="com.avitam.application.daoimpl.OrderItemDaoImpl">
      <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>
      
                            <!-- SERVICE LAYER -->
      
    <bean id="userService"
      class="com.avitam.application.serviceimpl.UserServiceImpl">
      <property name="userDao" ref="userDao"/>
   </bean>
   
   <bean id="categoryService"
      class="com.avitam.application.serviceimpl.CategoryServiceImpl">
      <property name="categoryDao" ref="categoryDao"/>
   </bean>
   
   <bean id="productService"
      class="com.avitam.application.serviceimpl.ProductServiceImpl">
      <property name="productDao" ref="productDao"/>
   </bean>
   
   <bean id="subCategoryService"
      class="com.avitam.application.serviceimpl.SubCategoryServiceImpl">
      <property name="subCategoryDao" ref="subCategoryDao"/>
   </bean>
   
   <bean id="cartService"
      class="com.avitam.application.serviceimpl.CartServiceImpl">
      <property name="cartDao" ref="cartDao"/>
   </bean>
   
   <bean id="cartItemService"
      class="com.avitam.application.serviceimpl.CartItemServiceImpl">
      <property name="cartItemDao" ref="cartItemDao"/>
   </bean>
   
   <bean id="addressService"
      class="com.avitam.application.serviceimpl.AddressServiceImpl">
      <property name="addressDao" ref="addressDao"/>
   </bean>
   
   
   
   <bean id="orderEmailService"
      class="com.avitam.application.serviceimpl.OrderEmailService">
   </bean>
   
   <bean id="orderService"
      class="com.avitam.application.serviceimpl.OrderServiceImpl">
      <property name="orderDao" ref="orderDao"/>
      <property name="addressDao" ref="addressDao"/>
      <property name="addressService" ref="addressService"/>
      <property name="productService" ref="productService"/>
      <property name="orderItemDao" ref="orderItemDao"/>
      <property name="cartItemService" ref="cartItemService"/>
      <property name="orderEmailService" ref="orderEmailService"/>
   </bean>
   
                          <!--   JDBC CONNECT -->
   
    <bean id="jdbcTemplate"
          class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource" />
    </bean>
    
    <bean id="dataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver" />
        <property name="url" value="jdbc:mysql://localhost:3306/jdbc" />
        <property name="username" value="root" />
        <property name="password" value="Sabari@2309" />
    </bean>
</beans>
